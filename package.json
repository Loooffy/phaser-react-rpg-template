{
  "name": "phaser-rpg",
  "version": "1.0.0-alpha",
  "description": "A template for building Phaser RPG games.",
  "author": "Mark <mark@remarkablemark.org>",
  "scripts": {
    "build": "npm run clean && vite build",
    "bundle": "scripts/bundle.sh",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:tsc": "tsc --noEmit",
