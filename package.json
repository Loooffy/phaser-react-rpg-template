    "@vitejs/plugin-react-swc": "^4.1.0",
    "phaser": "3.90.0",
    "phaser-jsx": "0.13.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "20.0.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/compat": "1.4.0",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.36.0",
    "@types/gtag.js": "0.0.20",
    "@types/react": "19.1.15",
    "@types/react-dom": "^19.1.9",
    "autoprefix": "^1.0.1",
